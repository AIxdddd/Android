<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Lab1.Light" parent="Theme.Lab1">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="android:colorBackground">#4CAF50</item>
        <item name="android:windowBackground">#03A9F4</item>
        <item name="android:textColor">#000000</item>

        <item name="android:textColorPrimary">#000000</item>

    </style>

    <style name="Theme.Lab1.Dark" parent="Theme.Lab1">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#347837</item>
        <item name="android:colorBackground">#347837</item>
        <item name="android:windowBackground">#02374E</item>
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:textColorHint">#C2E6E6E6</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>
</resources>